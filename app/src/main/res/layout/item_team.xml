<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    apps:cardBackgroundColor="@android:color/white"
    apps:cardCornerRadius="4dp"
    apps:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/team_crust"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/team_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="20sp"
            android:textStyle="bold"
            apps:layout_constraintBottom_toBottomOf="@+id/team_crust"
            apps:layout_constraintEnd_toStartOf="@+id/team_code"
            apps:layout_constraintHorizontal_bias="0.0"
            apps:layout_constraintStart_toEndOf="@+id/team_crust"
            apps:layout_constraintTop_toTopOf="@+id/team_crust"
            apps:layout_constraintVertical_bias="0.0"
            tools:text="Real Madrid" />

        <TextView
            android:id="@+id/team_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            apps:layout_constraintBottom_toBottomOf="@+id/team_title"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintTop_toTopOf="@+id/team_title"
            apps:layout_constraintVertical_bias="0.0"
            tools:text="RMD" />

        <TextView
            android:id="@+id/team_short_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="16sp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toEndOf="@+id/team_title"
            apps:layout_constraintStart_toEndOf="@+id/team_crust"
            apps:layout_constraintTop_toTopOf="@+id/team_crust"
            apps:layout_constraintVertical_bias="1.0"
            tools:text="Meringue" />

        <TextView
            android:id="@+id/team_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="12sp"
            apps:layout_constraintBottom_toBottomOf="@+id/team_short_name"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintTop_toTopOf="@+id/team_short_name"
            tools:text="354,860" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>