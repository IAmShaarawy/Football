<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="4dp"
    apps:cardBackgroundColor="@android:color/white"
    apps:cardCornerRadius="8dp"
    apps:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/league_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintHorizontal_bias="0.0"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toTopOf="parent"
            apps:layout_constraintVertical_bias="0.00999999"
            tools:text="La Liga" />

        <TextView
            android:id="@+id/league_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            apps:layout_constraintBottom_toBottomOf="@+id/league_title"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintHorizontal_bias="0.0"
            apps:layout_constraintStart_toEndOf="@+id/league_title"
            apps:layout_constraintTop_toTopOf="@+id/league_title"
            tools:text="2019" />

        <TextView
            android:id="@+id/league_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="16sp"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintHorizontal_bias="0.0"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toBottomOf="@+id/league_title"
            tools:text="Some Caption Some Caption Some Caption" />

        <TextView
            android:id="@+id/teams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:text="Teams"
            android:textStyle="bold"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintTop_toBottomOf="@+id/league_caption" />

        <TextView
            android:id="@+id/games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Games"
            android:textStyle="bold"
            apps:layout_constraintEnd_toStartOf="@+id/teams"
            apps:layout_constraintStart_toEndOf="@+id/played"
            apps:layout_constraintTop_toBottomOf="@+id/league_caption" />

        <TextView
            android:id="@+id/played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Played"
            android:textStyle="bold"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toBottomOf="@+id/league_caption" />

        <TextView
            android:id="@+id/league_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            apps:layout_constraintEnd_toEndOf="@+id/played"
            apps:layout_constraintStart_toStartOf="@+id/played"
            apps:layout_constraintTop_toBottomOf="@+id/played"
            tools:text="6/50" />

        <TextView
            android:id="@+id/league_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            apps:layout_constraintEnd_toEndOf="@+id/games"
            apps:layout_constraintStart_toStartOf="@+id/games"
            apps:layout_constraintTop_toBottomOf="@+id/games"
            tools:text="600" />

        <TextView
            android:id="@+id/league_teams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            apps:layout_constraintEnd_toEndOf="@+id/teams"
            apps:layout_constraintStart_toStartOf="@+id/teams"
            apps:layout_constraintTop_toBottomOf="@+id/teams"
            tools:text="36" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>